<% if notice %>
  <div class="ui yellow message top-margin">
    <i class="close icon"></i>
    <div class="header">
      Notice
    </div>
    <p><%= notice %></p>
  </div>
<% end %>

<% if alert %>
  <div class="top-margin ui red message">
    <i class="close icon"></i>
    <div class="header">
      Alert
    </div>
    <p><%= alert %></p>
  </div>
<% end %>