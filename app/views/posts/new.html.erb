<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <%= form_with model: @post, class: "ui form" do |f| %>
      <div class="field">
        <label>Title</label>
        <%= f.text_field :title, placeholder: "Post title" %>
      </div>
      <div class="field">
        <label>Summary</label>
        <%= f.text_field :summary, placeholder: "A brief summary (optional)" %>
      </div>
      <div class="field">
        <label>Post content</label>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <div class="segment">
          <%= f.check_box :public %>
          <label>Make my post public</label>
      </div>
      </div>
      <%= f.submit "Post", class: "ui button" %>
    <% end %>
  </div>
  <div class="four wide column"></div>
</div>