<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <%= form_with model: @post, class: "ui form" do |f| %>
    <div class="field">
      <label>Post title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Post content</label>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <div class="card">
        <%= f.check_box :public %>
        <label>Make my post public</label>
     </div>
    </div>
    <%= f.submit "Post", class: "ui button" %>
    <% end %>
  </div>
  <div class="four wide column"></div>
</div>